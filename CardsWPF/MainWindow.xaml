<Window x:Class="CardsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.791"/>
                    <GradientStop Color="#FFC9BD44" Offset="0.729"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Label Content="Введите имя" Margin="200 20 200 5"/>
            <TextBox Name="firstName" Margin="200 5" />
            <Label Content="Введите фамилию" Margin="200 10 200 5"/>
            <TextBox Name="secondName" Margin="200 5" />
            <Label Content="Введите группу" Margin="200 10 200 5"/>
            <TextBox Name="groups" Margin="200 5" />
            <Button Content="Сохранить" Margin="500 80 100 0" Style="{DynamicResource ResourceKey=MaterialDesignFlatAccentButton}"  Click="Button_Click" />

        </StackPanel>
    </Grid>
</Window>
